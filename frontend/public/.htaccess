<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /

  # Redirect everything except existing files/directories to index.html
  RewriteCond %{REQUEST_FILENAME} !-f
  RewriteCond %{REQUEST_FILENAME} !-d
  RewriteRule . /index.html [L]
</IfModule>

# Fallback if mod_rewrite is disabled
ErrorDocument 404 /index.html



